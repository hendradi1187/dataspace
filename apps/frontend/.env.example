# Environment Configuration for Dataspace Frontend
# Copy this file to .env and update with your local/production values

# API Base URLs - Microservices
VITE_IDP_API_URL=http://localhost:3000
VITE_BROKER_API_URL=http://localhost:3001
VITE_HUB_API_URL=http://localhost:3002
VITE_POLICY_API_URL=http://localhost:3003
VITE_CONTRACT_API_URL=http://localhost:3004
VITE_COMPLIANCE_API_URL=http://localhost:3005
VITE_LEDGER_API_URL=http://localhost:3006
VITE_CLEARING_API_URL=http://localhost:3007
VITE_APPSTORE_API_URL=http://localhost:3008
VITE_CONNECTOR_API_URL=http://localhost:3009

# OAuth2 Configuration
VITE_OAUTH_CLIENT_ID=client_id_here
VITE_OAUTH_CLIENT_SECRET=client_secret_here
VITE_OAUTH_GRANT_TYPE=client_credentials

# Application Settings
VITE_API_TIMEOUT=10000
VITE_TOKEN_REFRESH_INTERVAL=300000
VITE_SESSION_TIMEOUT=3600000

# Feature Flags
VITE_ENABLE_AUDIT_LOGGING=true
VITE_ENABLE_WEBHOOKS=true
VITE_ENABLE_BULK_OPERATIONS=true

# Application Environment
VITE_ENV=development
VITE_LOG_LEVEL=debug
